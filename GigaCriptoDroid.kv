<Gerenciador>:
    Menu_Inicial
    Tipo_Criptografia
    Tipo_Descriptografia
    Criptografia_Chave_Simples
    Criptografia_Chave_Dupla
    Descriptografia_Chave_Simples
    Descriptografia_Chave_Dupla

<Menu_Inicial>:
    name:"menu_inicial"

    canvas:
        Color:
            rgba:1,1,1,0.5
        Rectangle:
            size:self.size
            pos:self.pos
            source:"/images/dia_das_com.jpg"

    BoxLayout:
        orientation:"vertical"
        padding:root.width*0.1,root.height*0.1

        Label:
            id:GigaDroid
            text:"GIGA CRIPTO\nDROID\n\n"
            font_size:50
            font_name:"Stencil"
            bold:True
            color:"black"
            size_hint_y:0.5
            halign:"center"
            valign:"top"
            shorten:True
            shorten_from:"center"

        BoxLayout:
            orientation:"vertical"

            Button:
                id:Criptografar
                font_name:"Stencil"
                text:"Criptografar"
                on_release:app.root.current = "tipo_criptografia"

            Button:
                id:Descriptografar
                font_name:"Stencil"
                text:"Descriptografar"
                on_release:app.root.current = "tipo_descriptografia"

            Label:
                id:copyright
                font_name:"Stencil"
                text:"Desenvolvido por:\nAsp Luis Gustavo e Asp Estevam /23"
                size_hint_y:None
                height:60
                halign:"center"
                valign:"center"
                shorten:True
                shorten_from:"center"

<Tipo_Criptografia>:
    name:"tipo_criptografia"

    canvas:
        Color:
            rgba:1,1,1,0.5
        Rectangle:
            size:self.size
            pos:self.pos
            source:"/images/cyberphone.jpg"

    BoxLayout:
        orientation:"vertical"

        ActionBar:
            ActionView:
                ActionPrevious:
                    title:"Tipo de Criptografia"
                    on_release:app.root.current = "menu_inicial"

        BoxLayout:
            orientation:"vertical"
            padding:root.width*0.1,root.height*0.3
            Button:
                id:Chave_Simples
                text:"Chave Simples"
                font_name:"Stencil"
                on_release:app.root.current = "criptografia_chave_simples"

            Button:
                id:Criptografar_Chave_Dupla
                font_name:"Stencil"
                text:"Chave Dupla"
                on_release:app.root.current = "criptografia_chave_dupla"

<Tipo_Descriptografia>:
    name:"tipo_descriptografia"

    canvas:
        Color:
