            ActionView:
                ActionPrevious:
                    title:"Tipo de Descriptografia"
                    on_release:app.root.current = "menu_inicial"

        BoxLayout:
            orientation:"vertical"
            padding:root.width*0.1,root.height*0.3
            Button:
                id:Descriptogafar_Chave_Simples
                font_name:"Stencil"
                text:"Chave Simples"
                on_release:app.root.current = "descriptografia_chave_simples"

            Button:
                id:Criptografar_Chave_Dupla
                font_name:"Stencil"
                text:"Chave Dupla"
                on_release:app.root.current = "descriptografia_chave_dupla"


<Criptografia_Chave_Simples>:
    name:"criptografia_chave_simples"

    canvas:
        Color:
            rgba:1,1,1,0.5
        Rectangle:
            size:self.size
            pos:self.pos
            source:"/images/cyberphone.jpg"

    BoxLayout:
        id:page_cripto_chave_simples
        orientation:"vertical"
        ActionBar:
            ActionView:
                ActionPrevious:
                    title:"Criptografia por Chave Simples"
                    on_release:app.root.current = "tipo_criptografia"

        ScrollView:
            id:scroll_cripto_chave_simples
            BoxLayout:
                id:box_cripto_chave_simples
                orientation:'vertical'
                spacing:10

                TextInput:
                    id:mensagem_cripto_chave_simples
                    text:""
                    hint_text:"MENSAGEM"

                TextInput:
                    id:cripto_chave_simples
                    size_hint_y:None
                    height:60
                    hint_text:"CHAVE SIMPLES"

                Button:
                    id:criptografar_chave_simples
                    text:"CRIPTOGRAFAR"
                    size_hint_y:None
                    height:60
                    on_release:root.criptografar_chave_simples()

                Label:
                    id:resultado_cripto_chave_simples

